{
	"name": "nextlang",
	"displayName": "Next Lang",
	"description": "Language support for Next and Next Template NPL (Based on Go Template)",
	"version": "0.0.13",
	"publisher": "nextlangorg",
	"icon": "res/icons/icon.svg",
	"repository": {
		"type": "git",
		"url": "https://github.com/gopherd/next.vscode.git"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:next",
		"onLanguage:npl",
		"onLanguage:tmpl",
		"onLanguage:gotmpl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"iconThemes": [
    		{
    			"id": "custom-file-icons",
    			"label": "Custom File Icons",
    			"path": "./iconTheme.json"
    		}
    	],
		"configuration": {
			"title": "Next Lang",
			"properties": {
				"nextlang.useTabsInsteadOfSpaces": {
					"type": "boolean",
					"default": false,
					"description": "Use tabs instead of spaces for indentation in Next Lang files"
				},
				"nextlang.tabSize": {
					"type": "number",
					"default": 4,
					"description": "The number of spaces a tab is equal to in Next Lang files"
				}
			}
		},
		"languages": [
			{
				"id": "next",
				"aliases": ["Next", "next"],
				"extensions": [".next"],
				"configuration": "./next-language-configuration.json"
			},
			{
				"id": "npl",
				"aliases": ["NPL", "npl"],
				"extensions": [".npl"],
				"configuration": "./tmpl-language-configuration.json"
			},
			{
				"id": "tmpl",
				"aliases": ["TMPL", "tmpl"],
				"extensions": [".tmpl"],
				"configuration": "./tmpl-language-configuration.json"
			},
			{
				"id": "gotmpl",
				"aliases": ["TMPL", "tmpl"],
				"extensions": [".gotmpl"],
				"configuration": "./tmpl-language-configuration.json"
			},
			{
				"id": "yaml",
				"extensions": [".nextproj"]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/node": "^14.14.31",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
